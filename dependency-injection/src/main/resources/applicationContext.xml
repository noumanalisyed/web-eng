<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

	<context:property-placeholder location="person.properties"/>

    <!-- Define your beans here -->
    
    <!-- define the dependency -->

    <bean id="myHeart"
    		class="com.spring.dependency.dependency_injection.Heart"
	>
    </bean>
	<bean id="myBrain"
		  class="com.spring.dependency.dependency_injection.Brain">
	</bean>
    
 	<bean id="myPerson"
 		class="com.spring.dependency.dependency_injection.Person"
		  init-method="init" destroy-method="destroy">
 		<!-- set up constructor injection -->
 		<!--<constructor-arg>
			<ref bean="myBrain"/>
		</constructor-arg>
		<constructor-arg>
			<ref bean="myHeart"/>
		</constructor-arg>-->
		<property name="theBrain" ref="myBrain"/>
		<property name="theHeart" ref="myHeart"/>
		<property name="firsName" value="${firstName}"/>
		<property name="lastName" value="${lastName}"/>
		<property name="personId" value="${personId}"/>
 	</bean>



</beans>





